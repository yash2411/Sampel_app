<% provide(:title, 'All Users') %>
<h1>All Users</h1>

<ul>
<% @users.each do |user| %>
<li>
<%= gravatar_for user %>
<%= link_to user.name, user %>
<% if current_user.admin? %>
<%= link_to "Delete", user, data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
              } %>
<% end %>
</li>
<br>
<% end %>
</ul>